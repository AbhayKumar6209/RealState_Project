@model RealEstate.Models.PlotMaster
@{
	Layout = null;
}
@using System.Data;


<div class="section">
	<div class="container">
		<div class="row mb-5 align-items-center">
			<div class="col-lg-6">
				<h2 class="font-weight-bold text-primary heading">
					Popular Properties
				</h2>
			</div>
			<div class="col-lg-6 text-lg-end">
				<p>
					<a href="/home/properties" class="btn btn-primary text-white py-3 px-4">View all properties</a>
				</p>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				@if(Model.dt != null && Model.dt.Rows.Count > 0){
				<div class="property-slider-wrap">
					<div class="property-slider">
						@foreach(DataRow dr in Model.dt.Rows) {

						<div class="property-item">
							<a href="/home/propertydetails?PlotId=@dr["Id"]" class="img">
								<img src="@dr["PlotImage"]" alt="Image" class="img-fluid" />
							</a>

							<div class="property-content">
								<div class="price mb-2">
									<span>@dr["PlotName"]</span>
								</div>
								<div>
									<span class="d-block mb-2 text-black-50"><i class="icon-map-marker"></i> @dr["Location"]</span>
									<span class="city d-block mb-3"><i class="icon-rupee"></i> @dr["PlotCost"]</span>

									<div class="specs d-flex mb-4">
										<span class="d-block d-flex align-items-center me-3">
											<!--<span class="icon-bed me-2"></span>-->
											<span class="caption"><i class="icon-rupee"></i> @dr["PlotRate"]/ft<sup>2</sup></span>
										</span>
										<span class="d-block d-flex align-items-center">
											<span class="caption"><i class="icon-area-chart"></i> @dr["PlotArea"] ft<sup>2</sup></span>
										</span>
									</div>
									<a href="javascript:void(0)" onclick="_prop_enquire_modal('@dr["Id"]','@(dr["PlotName"])')" class="btn btn-primary py-2 px-3">Enquiry Now</a>
									<a href="/home/propertydetails?PlotId=@dr["Id"]" class="btn btn-info py-2 px-3">See Details</a>
								</div>
							</div>
						</div>
						<!--@*<div class="property-item">
							<a href="/home/propertydetails" class="img">
								<img src="~/HomeAssets/images/img_2.jpg" alt="Image" class="img-fluid" />
							</a>

							<div class="property-content">
								<div class="price mb-2"><span>$1,291,000</span></div>
								<div>
									<span class="d-block mb-2 text-black-50">5232 California Fake, Ave. 21BC</span>
									<span class="city d-block mb-3">California, USA</span>

									<div class="specs d-flex mb-4">
										<span class="d-block d-flex align-items-center me-3">
											<span class="icon-bed me-2"></span>
											<span class="caption">2 beds</span>
										</span>
										<span class="d-block d-flex align-items-center">
											<span class="icon-bath me-2"></span>
											<span class="caption">2 baths</span>
										</span>
									</div>
									<a href="javascript:void(0)" class="btn btn-primary py-2 px-3">Enquire Now</a>
								</div>
							</div>
						</div>*@-->
					}
					</div>

					<div id="property-nav"
						 class="controls"
						 tabindex="0"
						 aria-label="Carousel Navigation">
						<span class="prev"
							  data-controls="prev"
							  aria-controls="property"
							  tabindex="-1">Prev</span>
						<span class="next"
							  data-controls="next"
							  aria-controls="property"
							  tabindex="-1">Next</span>
					</div>
				</div>
					}
			</div>
		</div>
	</div>
</div>
